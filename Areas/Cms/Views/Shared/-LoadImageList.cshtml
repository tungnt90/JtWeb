@{
      
    DirectoryInfo di = new DirectoryInfo(Server.MapPath("/Uploads/"));
    List<FileInfo> rgFiles = di.GetFiles("*.*").OrderBy(f => f.LastWriteTime).ToList();
    foreach (FileInfo fi in rgFiles)
    {
        if (fi.Extension.ToLower() == ".gif" || fi.Extension.ToLower() == ".png" || fi.Extension.ToLower() == ".jpg")
        {
    <div class="image-item">
        <img src="/Uploads/@fi.Name" width="110px" height="90px" alt="/Uploads/@fi.Name" class="border"/>
        <div class="link">
            <input type="text" value="/Uploads/@fi.Name" style="width:105px"/>
        </div>
        <div class="box-folder">
            <a href="#Delete" id="@fi.Name" class="delete">Delete</a>
        </div>
    </div> 
        }
        else
        {
    <div class="image-item">
        <img src="/Assets/Images/no_image.jpg" width="110px" height="90px" alt="" class="border" />
        <div class="link">
            <input type="text" value="/Uploads/@fi.Name" style="width:105px"/>
        </div>
        <div class="box-folder">
            <a href="#Delete" id="@fi.Name" class="delete">Delete</a>
        </div>
    </div>        
        }

    }
    <div class="clear">
    </div>
}
