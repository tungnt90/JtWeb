@model Vcs.SystemMenuItem
@{
    ViewBag.Title = "Edit";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(false)
    <fieldset class="normal" id="edit-page-meta-form">
        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
            @Html.EditorFor(model => model.Name)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Url)
            @Html.EditorFor(model => model.Url)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.PositionValue)
            @Html.EditorFor(model => model.PositionValue)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.ParentId)
            @Html.DropDownListFor(model => model.ParentId, new SelectList(Vcs.SystemMenuItem.Cache.Where(p => p.ParentId == null), "Id", "Name"), "None", "0")
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.MinimumRole)
            @Html.DropDownListFor(model => model.MinimumRole, new SelectList(Vcs.Role.All(), "Id", "Name"))
        </div>
        <p>
            <input type="submit" value="Save" class="button" id="save-button" />
        </p>
    </fieldset>

}