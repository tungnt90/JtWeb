@model Vcs.Setting
@{
    ViewBag.Title = "Edit Setting";
    Layout = "~/Views/Shared/_System.cshtml";
}
<h2>
    Edit Setting</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm("Edit", "Settings", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
    <fieldset class="normal">
        @Html.HiddenFor(model => model.Id)
        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>
        <div class="editor-label">
            @if (Model.Type == "image")
            {
                @Html.LabelFor(model => model.Value)
                <input type="file" id="newimage" name="newimage" />   
           
                @Html.ValidationMessageFor(model => model.Value)
            }
            else
            {
                @Html.LabelFor(model => model.Value)
                @Html.EditorFor(model => model.Value)
                @Html.ValidationMessageFor(model => model.Value)
            }
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Type)
            @Html.EditorFor(model => model.Type)
            @Html.ValidationMessageFor(model => model.Type)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.IsSystemSetting, "Is system setting?")
            @Html.EditorFor(model => model.IsSystemSetting)
            @Html.ValidationMessageFor(model => model.IsSystemSetting)
        </div>
        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
