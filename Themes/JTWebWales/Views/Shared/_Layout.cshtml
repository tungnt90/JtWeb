@using Vcs
<!DOCTYPE html>
<html>
<head>
    <title>@Settings.WebsiteName - @ViewBag.Title</title>
    <link rel="icon" type="image/png" href="/favicon.ico">
    <link href="/content/telerik.common.min.css" rel="Stylesheet" type="text/css" />
    <link href="/content/telerik.metro.min.css" rel="Stylesheet" type="text/css" />
    <link href="/content/telerik.rtl.min.css" rel="Stylesheet" type="text/css" />
    <link href="@Url.ThemeFile("JTWebWales", "style.css")"  rel="Stylesheet" type="text/css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.6.4/jquery.min.js" type="text/javascript"></script>
    <script src="@Url.ThemeFile("JTWebWales", "Js/main.js")" type="text/javascript"></script>
    <meta name="keywords" content="@Vcs.Setting.Get("MetaKeyWord")">
    <meta name="description" content="@Vcs.Setting.Get("MetaDescription")">
    <meta name="Copyright" content="@Vcs.Setting.Get("MetaCopyRight")" />
    <meta name="Author" content="@Settings.WebsiteName" />
    <meta http-equiv="Content-Language" content="en" />
    <meta name="robots" content="index,follow" />
    <meta name="Rating" content="General" />
</head>
<body>
<div id="zone-page">
    <div id="zone-top">
        <div id="zt-left" class="fleft">
            <div id="jt-logo"></div>
        </div>
        <div id="zt-right" class="fleft">
            <div id="jt-menu">
                <ul>
                    <li class="@(Request.Url.AbsolutePath.ToLower() == "/" || Request.Url.AbsolutePath == "/jt-home" ? "selected arrow-down" : "")"><a class="text" href="/">HOME</a></li>
                    <li class="@(Request.Url.AbsolutePath.ToLower() == "/about" ? "selected arrow-down" : "")"><a class="text" href="/about">ABOUT US</a></li>
                    <li class="@(Request.Url.AbsolutePath.ToLower() == "/contact" ? "selected arrow-down" : "")"><a class="text" href="/contact">CONTACT</a></li>
                </ul>
            </div>
        </div>
        <div class="clear"></div>
    </div>
    <div id="zone-body">
        @RenderBody()
    </div>
</div>
<div class="mg">&nbsp;</div>
<div id="zone-footer">
    <div id="zf-content" class="layout">
    <div class="fleft">JT</div>
    <div class="fright" id="zf-email">Studio@jtwebwales.co.uk</div>
    <div class="clear"></div>
    <div id="zf-copyright">
        Copyright © 2012 JTwebWales.<br />
        All rights reserved.
    </div>
    </div>
</div>
</body>
</html>
